#!/usr/bin/env python

"""
This is a place holder script for use in testing.

The actual script which is installed is generated by python-distribute.
"""

import os
import sys
# Prepend the xylem source directory to the pythonpath
xylem_src = os.path.join(os.path.dirname(__file__), '..', 'xylem')
if os.path.exists(xylem_src):
    sys.path.insert(0, os.path.abspath(os.path.dirname(xylem_src)))
# Prepend the scripts directory to the path
scripts_dir = os.path.join(os.path.dirname(__file__), '..', 'scripts')
if os.path.exists(scripts_dir):
    os.environ['PATH'] = os.path.abspath(scripts_dir) + \
        (':' + os.environ['PATH'] if 'PATH' in os.environ else '')

from xylem.commands.main import main

if __name__ == '__main__':
    sys.exit(main() or 0)
